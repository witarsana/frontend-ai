{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Development Server",
      "type": "shell",
      "command": "npm run dev",
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      }
    },
    {
      "label": "Start Backend Server",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "eval \"$(conda shell.bash hook)\" && conda activate transcription-ai && python ffmpeg_free_main.py"],
      "group": "build",
      "isBackground": true,
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      }
    }
  ]
}

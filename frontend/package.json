{
  "name": "ai-meeting-transcription",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "description": "Full-stack AI Meeting Transcription with React frontend and FastAPI backend",
  "author": "Your Name",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "backend": "cd ai-backend && python ffmpeg_free_main.py",
    "backend:setup": "cd ai-backend && python -m venv ../.venv && source ../.venv/bin/activate && pip install -r requirements.txt",
    "dev:full": "concurrently \"npm run backend\" \"npm run dev\"",
    "start": "npm run dev:full",
    "setup": "npm install && npm run backend:setup",
    "clean": "rm -rf node_modules dist ai-backend/uploads/* ai-backend/results/*"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ai",
    "transcription",
    "whisper",
    "react",
    "typescript",
    "fastapi",
    "audio-processing",
    "speaker-diarization"
  ]
}

# Frontend Environment Configuration for Notion Integration

# API URL - Backend endpoint
REACT_APP_API_URL=http://localhost:8000

# Notion Database ID - Your action items database
REACT_APP_NOTION_DATABASE_ID=your_notion_database_id_here

# Application Environment
REACT_APP_ENV=development

# Feature Flags
REACT_APP_NOTION_INTEGRATION=true
REACT_APP_AI_ENHANCEMENT=true

# Demo Mode (optional)
REACT_APP_DEMO_MODE=false

# File Upload Settings
REACT_APP_MAX_FILE_SIZE=50MB
REACT_APP_SUPPORTED_FORMATS=mp3,wav,m4a,mp4

# UI Configuration
REACT_APP_THEME=light
REACT_APP_ENABLE_ANIMATIONS=true

# Analytics (optional)
REACT_APP_ANALYTICS_ENABLED=false

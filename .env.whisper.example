# Local Whisper Configuration
USE_LOCAL_WHISPER=true
LOCAL_WHISPER_URL=http://localhost:8000

# If USE_LOCAL_WHISPER=true, the system will:
# 1. First try to use local Whisper service if available
# 2. Fall back to cloud OpenAI if local service is down (if OPENAI_API_KEY is set)
# 3. Fall back to other engines if both are unavailable

# Cloud API Keys (optional when using local Whisper)
OPENAI_API_KEY=your_openai_api_key_here
DEEPGRAM_API_KEY=your_deepgram_api_key_here
HUGGING_FACE_TOKEN=your_hugging_face_token_here
